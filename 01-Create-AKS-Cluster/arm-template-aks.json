{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "metadata": {
        "description": "The name of the AKS cluster."
      },
      "defaultValue": "aksdemo1"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The location of the AKS cluster."
      },
      "defaultValue": "centralus"
    },
    "dnsPrefix": {
      "type": "string",
      "metadata": {
        "description": "DNS prefix for the cluster."
      },
      "defaultValue": "aksdemo1"
    },
    "osDiskSizeGB": {
      "type": "int",
      "metadata": {
        "description": "Disk size (in GB) to provision for each of the agent pool nodes."
      },
      "defaultValue": 128
    },
    "agentCount": {
      "type": "int",
      "metadata": {
        "description": "The number of nodes for the cluster."
      },
      "defaultValue": 1
    },
    "agentVMSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the Virtual Machine."
      },
      "defaultValue": "Standard_D2s_v3"
    },
    "kubernetesVersion": {
      "type": "string",
      "metadata": {
        "description": "The version of Kubernetes."
      },
      "defaultValue": "1.29.0"
    },
    "enableAutoScaling": {
      "type": "bool",
      "metadata": {
        "description": "Enable cluster autoscaling."
      },
      "defaultValue": true
    },
    "minCount": {
      "type": "int",
      "metadata": {
        "description": "Minimum number of nodes for autoscaling."
      },
      "defaultValue": 1
    },
    "maxCount": {
      "type": "int",
      "metadata": {
        "description": "Maximum number of nodes for autoscaling."
      },
      "defaultValue": 5
    },
    "networkPlugin": {
      "type": "string",
      "metadata": {
        "description": "Network plugin to use for networking."
      },
      "defaultValue": "azure"
    },
    "enableRBAC": {
      "type": "bool",
      "metadata": {
        "description": "Enable RBAC."
      },
      "defaultValue": true
    },
    "enableAzurePolicy": {
      "type": "bool",
      "metadata": {
        "description": "Enable Azure Policy."
      },
      "defaultValue": true
    },
    "availabilityZones": {
      "type": "array",
      "metadata": {
        "description": "Availability zones for the cluster."
      },
      "defaultValue": ["1", "2", "3"]
    },
    "tier": {
      "type": "string",
      "metadata": {
        "description": "The pricing tier for the cluster."
      },
      "defaultValue": "Free"
    },
    "autoUpgradeChannel": {
      "type": "string",
      "metadata": {
        "description": "Auto upgrade channel."
      },
      "defaultValue": "patch"
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2023-10-01",
      "name": "[parameters('clusterName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic",
        "tier": "[parameters('tier')]"
      },
      "properties": {
        "kubernetesVersion": "[parameters('kubernetesVersion')]",
        "dnsPrefix": "[parameters('dnsPrefix')]",
        "agentPoolProfiles": [
          {
            "name": "agentpool",
            "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
            "count": "[parameters('agentCount')]",
            "enableAutoScaling": "[parameters('enableAutoScaling')]",
            "minCount": "[parameters('minCount')] ",
            "maxCount": "[parameters('maxCount')]",
            "vmSize": "[parameters('agentVMSize')]",
            "osType": "Linux",
            "availabilityZones": "[parameters('availabilityZones')]",
            "mode": "System"
          }
        ],
        "networkProfile": {
          "networkPlugin": "[parameters('networkPlugin')]",
          "loadBalancerSku": "standard",
          "outboundType": "loadBalancer"
        },
        "autoUpgradeProfile": {
          "upgradeChannel": "[parameters('autoUpgradeChannel')]"
        },
        "enableRBAC": "[parameters('enableRBAC')]",
        "addonProfiles": {
          "omsagent": {
            "enabled": true,
            "config": {
              "logAnalyticsWorkspaceResourceID": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', 'DefaultWorkspace'), '2023-09-01').id]"
            }
          }
        }
      },
      "identity": {
        "type": "SystemAssigned"
      }
    }
  ],
  "outputs": {
    "controlPlaneFQDN": {
      "type": "string",
      "value": "[reference(parameters('clusterName')).fqdn]"
    }
  }
}